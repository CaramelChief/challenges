import math

#Values
AB_dist = 2546375247
AC_dist = 45987482082

AB = int(AB_dist)
AC = int(AC_dist)

#Solve for B to C measurement
BC_distance = math.sqrt (AB ** 2 + AC ** 2)

Area = (AB * AC) / 2
Perimeter = AB + AC + BC_distance

Area = round(Area)
Perimeter = round(Perimeter)

print (Area)
print (Perimeter)
